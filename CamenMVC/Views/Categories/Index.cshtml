@model IEnumerable<CamenMVC.Models.Categorie>

@{
    ViewBag.Title = "Categorie";
}

<h2>@ViewBag.Title </h2>
    <h2><a href="@Url.Action("Create", "Categories")" class="btn btn-primary"><span class="badge">@ViewBag.CategorieCount</span> Nuova</a></h2>
<table class="table table-hover">
@foreach (var item in Model) {
    <tr>
        <td>
                @Html.ActionLink(@item.Categoria, "Edit", new { id = item.Categoria_Id }, new {@class= "glyphicon glyphicon-pencil" })
        </td>
        <td>
            @if (item.Documentis.Count > 0)
            {
                <a class="btn btn-primary" role="button" data-toggle="collapse" href="#@item.Categoria_Id" aria-expanded="false" aria-controls="@item.Categoria_Id">
                    @item.Documentis.Count() collegamenti
                </a>
                <div class="collapse" id="@item.Categoria_Id">
                    <div class="well">
                        @foreach (var item1 in item.Documentis)
                        {
                            <div><a href="@Url.Action("Edit", "Documentis", new {id = @item1.Documento_Id})" title="@item1.Descrizione"> @item1.NomeFile</a></div>
                        }
                    </div>
                </div>

            }
            else
            {
                @Html.ActionLink(" Elimina", "Delete", new { id = item.Categoria_Id }, new { @class = "btn btn-xs btn-danger glyphicon glyphicon-remove" })

            }
        </td>
    </tr>
}

</table>
<hr />
@Html.ActionLink("Fatto", "Index", "Documentis", null, new {@class="btn btn-success" })