@model IEnumerable<CamenMVC.Models.Menu>

@{
    ViewBag.Title = "Gestione menu";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Posizione)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TestoMenu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pubblica)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Posizione)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TestoMenu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pubblica)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Menu_Id }) |
            @Html.ActionLink("Sotto menu", "IndexAdm", "SottoMenus", new { id=item.Menu_Id, txtMenu = item.TestoMenu }, null) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Menu_Id })
        </td>
    </tr>
}

</table>
