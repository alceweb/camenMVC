@model CamenMVC.Models.Menu

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Menu</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Menu_Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Posizione, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Posizione, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Posizione, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TestoMenu, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TestoMenu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TestoMenu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Pubblica, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Pubblica)
                    @Html.ValidationMessageFor(model => model.Pubblica, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
        <hr/>
        <div class="form-group">
            <label class="control-label col-md-2">Pagina visibile da</label>
            <div class="col-md-10">
                @if (ViewBag.RuoliCount >= 1)
                {
                    foreach (var item in ViewBag.Ruoli)
                    {
                        <span class="badge">@item.Ruolo </span>

                    }
                }
                else
                {
                    <span class="badge">Tutti </span>
                }
                    <a href="@Url.Action("EditR", "Menus", new {id = Model.Menu_Id, menu = Model.TestoMenu })" class="text-danger h3"><span class="glyphicon glyphicon-pencil"></span></a>
            </div>
        </div>
        </div>

}

