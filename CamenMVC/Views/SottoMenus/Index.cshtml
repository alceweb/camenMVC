@model IEnumerable<CamenMVC.Models.SottoMenu>

@{
    ViewBag.Title = "Gestione sottomenu";
}

<h2>@ViewBag.Title</h2>

<p>
    <a href="@Url.Action("Create", "SottoMenus")" class="btn btn-primary"><span class="badge">@ViewBag.SottoMenusCount </span> Nuovo</a><br />
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TestoMenu.TestoMenu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TestoSmenu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pubblica)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TestoMenu.TestoMenu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TestoSmenu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pubblica)
        </td>
        <td>
            @Html.ActionLink("Modifica", "Edit", new { id = item.Smenu_Id }, new { @class = "btn btn-xs btn-success" })
            @Html.ActionLink("Dettagli", "Details", new { id = item.Smenu_Id }, new { @class = "btn btn-xs btn-primary" })
            @*Controllo se il sottomenu contienedelle pagine*@
            @if (item.Paginas.Count() == 0)
            {
                @Html.ActionLink("Cancella", "Delete", new { id = item.Smenu_Id }, new { @class = "btn btn-xs btn-danger" })
            }
            else
            {
                <span class="badge">@item.Paginas.Count() pagine</span>
            }
        </td>
    </tr>
}

</table>
