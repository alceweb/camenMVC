@model CamenMVC.Models.SottoMenu

@{
    ViewBag.Title = "Cancella sottomenu";
}

<h2>@ViewBag.Title</h2>

<h3>Se sicuro di voler cancellare la voce di sottomenu <strong><em>@Model.TestoMenu.TestoMenu - @Model.TestoSmenu</em></strong>?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TestoMenu.TestoMenu)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TestoMenu.TestoMenu)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TestoSmenu)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TestoSmenu)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Pubblica)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Pubblica)
        </dd>

    </dl>
    <hr />
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Cancella" class="btn btn-danger" />
            @Html.ActionLink("Annulla", "Index", null, new { @class = "btn btn-primary" })
        </div>
    }
</div>
