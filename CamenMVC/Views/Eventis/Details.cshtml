@model CamenMVC.Models.Eventi

@{
    ViewBag.Title = "Details";
}

<h2>Dettaglio</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Evento)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Evento)
        </dd>
        <dt>
            Ruoli attivi
        </dt>
        <dd>
            @foreach (var item in ViewBag.EventoRuoli)
            {
                <span class="badge">@item.RuoloId</span>
            }
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Modica", "Edit", new { id = Model.Evento_Id }) |
    @Html.ActionLink("Annulla", "Index")
</p>
