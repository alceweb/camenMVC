@model IEnumerable<CamenMVC.Models.RoleViewModel>

@{
    ViewBag.Title = "Gestione ruoli";
}

<h2>@ViewBag.Title</h2>
<p>
    <span class="badge">@ViewBag.RolesCount ruoli attivi</span>
</p>
<table class="table table-hover">
    @foreach (var item in ViewBag.Roles)
    {
        <tr>
            <td>
                <a href="@Url.Action("Details", "RolesAdmin", new { id = item.Id, usr = item.Name })"><strong><em>@item.Name</em></strong></a>
            </td>
        </tr>
    }


</table>
