@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewBag.Title = "Dettaglio ruolo";
}

<h2>@ViewBag.Title</h2>
<h3>@ViewBag.UserCount utenti nel ruolo @Model.Name</h3>
@if (ViewBag.UserCount == 0)
{
    <p>Nessun utente assegnato a questo ruolo.</p>
    <hr />
}

<table class="table table-hover">

    @foreach (var item in ViewBag.Users)
    {
        <tr>
            <td>
                <a href="@Url.Action("Edit", "UsersAdmin", new {id = item.Id})" class="h3"><span class="glyphicon glyphicon-pencil text-success"></span></a>
                @if (File.Exists(@Url.Content("~/Content/Immagini/FotoIscritti/" + @item.Id + ".jpg")))
                {
                    <img class="img-usr" src="@Url.Content("~/Content/Immagini/FotoIscritti/" + @item.Id + ".jpg")" /> <span class="badge">@item.Email</span><span>@item.Nome @item.Cognome</span>
                }
                else
                {
                    <img class="img-usr" src="@Url.Content("~/Content/Immagini/FotoIscritti/anonimous.jpg")" /> <span class="badge">@item.Email</span> <span>@item.Nome @item.Cognome</span>
                }
            </td>
        </tr>
    }
</table>


